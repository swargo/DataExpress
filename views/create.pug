extends layout

block content
    h3 User Information
    form(id='form', method='post', action='/create')
        label(for='username') Username: 
        input(type='text', name='username')
        br
        label(for='password') Password: 
        input(type='password', name='password')
        br
        label(for='userlevel') User Level: 
        select(name='userlevel')
            option(value="User") User
            option(value="Admin") Admin
        br
        label(for='email') Email: 
        input(type='text', name='email')
        br
        label(for='age') Age: 
        input(type='text', name='age')
        br
        label(for='a1') What is your Gender?:
        select(name='a1')
            option(value="Male") Male
            option(value="Female") Female
            option(value="Other") Other
        br
        label(for='a2') Are you Currently Employed?:
        select(name='a2')
            option(value="Yes") Yes
            option(value="No") No
        br
        label(for='a3') Do you Prefer Cats or Dogs?:
        select(name='a3')
            option(value="Cats") Cats
            option(value="Dogs") Dogs
        br
        input(type='submit', value='Register')



